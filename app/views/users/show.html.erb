<% provide(:title, @user.name) %>
<%= gravatar_for(@user) %>
<%= @user.name %>, <%= @user.email %>

<div><!-- class="col-md-8">-->
  <% if @user.microposts.any? %>
  <h3>Microposts (<%= @user.microposts.count %>)</h3>
  <ol><!-- class="microposts">-->
    <%= render @microposts %>
  </ol>
  <%= will_paginate @microposts %> <!-- '@microposts' must be passed as an argument because it is not the same model as the current controller (which is users).-->
  <% end %>
</div>
