<% provide(:title, @user.name) %>
<h1><%= gravatar_for(@user) %></h1>
<h1><%= @user.name %></h1>
<p><%= @user.email %></p>

<div><!-- class="col-md-8">-->
  <% if @user.microposts.any? %>
  <h3>Microposts (<%= @user.microposts.count %>)</h3>
  <ol><!-- class="microposts">-->
    <%= render @microposts %>
  </ol>
  <%= will_paginate @microposts %> <!-- '@microposts' must be passed as an argument because it is not the same model as the current controller (which is users).-->
  <% else %>
    <%= render 'shared/nothing' %>
  <% end %>
</div>
